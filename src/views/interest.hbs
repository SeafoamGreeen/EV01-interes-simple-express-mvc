
<div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="signup-form">
              <form action="/" method="POST" class="mt-5 border p-4 bg-light shadow">
                <h3 class="mb-5 text-secondary">Calculadora de interés simple</h3>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Ingrese la cantidad de capital</label>
                  <input type="number" 
                    min="0"
                    required="true"
                    class="form-control"
                    name="capital"
                    placeholder="Ej: 100000"
                    value="{{capital}}"
                  >
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Ingrese tasa de interés anual</label>
                    <input type="number" 
                      min="0"
                      required="true"
                      class="form-control"
                      placeholder="Ej: 10"
                      name="interestRate"
                      value="{{interestRate}}"
                      >
                </div>

                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Ingrese la cantidad de años</label>
                  <input type="number"
                    min="0" 
                    required="true"
                    name="years"
                    class="form-control"
                    placeholder="Ej: 3"
                    value="{{years}}"
                  >
                </div>
                <button type="submit" class="btn btn-primary">Calcular</button>
                {{#if result}}
                  <p class="mt-3 h2">Interés simple de ${{result}} pesos.</p>
                {{/if}}
              </form>
            </div>
          </div>
        </div>
      </div>